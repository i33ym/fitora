				{
					"name": "Send OTP",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept-Language",
								"value": "uz",
								"description": "Language: en, uz, uz-cyrl, ru"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"phone_number\": \"+998901234567\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/sms/send-otp",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"sms",
								"send-otp"
							]
						},
						"description": "Send OTP code to phone number for authentication"
					},
					"response": []
				},
				{
					"name": "Verify OTP",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.success && jsonData.data.access_token) {",
									"        pm.environment.set(\"access_token\", jsonData.data.access_token);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept-Language",
								"value": "uz"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"phone_number\": \"+998901234567\",\n    \"session\": \"session-uuid-here\",\n    \"otp\": \"123456\",\n    \"fcm_token\": \"firebase-token-here\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/sms/verify-otp",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"sms",
								"verify-otp"
							]
						},
						"description": "Verify OTP code and get access token. Auto-saves token to environment."
					},
					"response": []
				},
				{
